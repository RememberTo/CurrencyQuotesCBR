@model RatesByDateViewModel

<h2 class="mx-1 mt-4">Котировки по дате</h2>

<div class="text-center">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <form asp-controller="Rates" asp-action="RatesByDate" class="text-center" method="get">
                <div class="d-flex mb-3">
                    <label for="selectedDate" style="width: 210px;" class="mx-1">Выберите дату:</label>
                    <input type="date" id="selectedDate" name="selectedDate"
                           class="form-control" value="@((Model != null) ?
                                Model.SelectedDate.ToString("yyyy-MM-dd") : "")"
                                required">
                </div>
                <button type="submit" class="btn btn-primary">Показать котировки</button>
            </form>
        </div>
    </div>
</div>

@if (Model != null && Model.Rates != null)
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <table class="table table-striped table-bordered table-condensed mt-4">
                    <thead>
                        <tr>
                            <th class="col-md-2 text-center">Валюта</th>
                            <th class="col-md-5 text-center">Значение</th>
                            <th class="col-md-5 text-center">Номинал</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rate in Model.Rates)
                        {
                            <tr>
                                <td class="text-center">@rate.CurrencyCharCode</td>
                                <td>@rate.Value</td>
                                <td>@rate.Nominal</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
